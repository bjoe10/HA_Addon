{
  "name": "Shlink",
  "slug": "shlink_addon",
  "description": "Self-hosted URL shortener with QR codes and statistics",
  "version": "4.3.0",
  "arch": ["amd64", "arm64"],
  "startup": "services",
  "boot": "auto",
  "init": false,

  "ports": {
    "8080/tcp": 8080
  },

  "options": {
    "default_domain": "qr.deinedomain.de",
    "is_https_enabled": true,
    "timezone": "Europe/Berlin",

    "db_driver": "sqlite",
    "db_host": "",
    "db_port": 3306,
    "db_name": "shlink",
    "db_user": "shlink",
    "db_password": "",

    "geolite_license_key": "",
    "anonymize_remote_addr": true
  },

  "schema": {
    "default_domain": "str",
    "is_https_enabled": "bool",
    "timezone": "str",

    "db_driver": "list(sqlite|maria)",
    "db_host": "str?",
    "db_port": "port",
    "db_name": "str",
    "db_user": "str",
    "db_password": "password?",

    "geolite_license_key": "str?",
    "anonymize_remote_addr": "bool"
  },

  "map": ["data:rw"]
}
